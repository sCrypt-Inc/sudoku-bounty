{
  "name": "scrypt-private-non-interactive-bounty",
  "version": "0.1.0",
  "description": "Demo implementation of a private non-interactive bounty smart contract. ",
  "author": "",
  "scripts": {
    "prebuild": "npm run clean",
    "build": "tsc",
    "clean": "rimraf scrypt.index.json && rimraf dist && rimraf scrypts",
    "pretest": "npm run build && npm run apply-optim",
    "apply-optim": "sh optimizations/apply_asm_optim.sh",
    "test": "mocha 'dist/tests/local/**/*.test.js' --timeout 1200000",
    "testnet": "npm run pretest && mocha 'dist/tests/testnet/**/*js' --timeout 1200000",
    "lint": "eslint . --ext .js,.ts --fix && prettier --write --ignore-unknown \"**/*\"",
    "lint-check": "eslint . --ext .js,.ts && prettier --check --ignore-unknown \"**/*\"",
    "prepare": "husky install",
    "prepublishOnly": "npm run build && npm run apply-optim",
    "deploy": "npm run pretest && node 'scripts/deploy.js' --timeout 1200000",
    "claim": "npm run pretest && node 'scripts/claim.js' --timeout 1200000",
    "deadline-cancel": "npm run pretest && node 'scripts/deadlineCancel.js' --timeout 1200000"
  },
  "lint-staged": {
    "**/*": [
      "prettier --write --ignore-unknown"
    ],
    "**/*.{ts,js}": [
      "eslint --cache --fix"
    ]
  },
  "dependencies": {
    "dotenv": "^16.0.3",
    "scrypt-ts": "beta",
    "circomlib": "^2.0.2",
    "ethers": "^5.5.2",
    "snarkjs": "^0.4.10",
    "blake-hash": "^1.1.0",
    "blake2b": "^2.1.3",
    "web3-utils": "^1.3.0",
    "ts-sync-request": "^1.4.1"
  },
  "devDependencies": {
    "@types/chai": "^4.3.4",
    "@types/chai-as-promised": "^7.1.5",
    "@types/mocha": "^10.0.0",
    "@types/node": "^18.11.10",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.48.1",
    "chai": "^4.3.6",
    "chai-as-promised": "^7.1.1",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.6.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.0",
    "mocha": "^10.1.0",
    "prettier": "^2.8.2",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "=4.8.4"
  },
  "license": "MIT"
}
